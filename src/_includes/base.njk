        {{ content | safe }}
    </main>
    {% include "footer.html" %}
    <script defer src="https://static.cloudflareinsights.com/beacon.min.js" data-cf-beacon='{"token": "7e9d8b03c4e27e92268d848a78589ca0"}'></script>
