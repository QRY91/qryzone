<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title | default("qry.zone") }}</title>
    <meta name="description" content="{{ description | default("zone of creation, learning, and query.") }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/globals.css">
    <link rel="stylesheet" href="/assets/css/header.css">
    {{ extraStyles | safe }}
    <script>
        // Load custom theme from localStorage (runs early to prevent flash)
        (function() {
            try {
                var theme = localStorage.getItem('qryzone-custom-theme');
                if (theme) {
                    var t = JSON.parse(theme);
                    var root = document.documentElement;
                    var map = {
                        bgDeep: '--color-background',
                        bgSurface: '--color-surface',
                        bgElevated: '--color-surface',
                        accent: '--color-accent',
                        textPrimary: '--color-text-primary',
                        textSecondary: '--color-text-secondary',
                        border: '--color-border'
                    };
                    for (var key in map) {
                        if (t[key]) root.style.setProperty(map[key], t[key]);
                    }
                    if (t.borderRadius !== undefined) {
                        root.style.setProperty('--border-radius', t.borderRadius + 'px');
                    }
                    if (t.fontFamily) {
                        document.documentElement.style.setProperty('--font-mono', t.fontFamily);
                        document.documentElement.style.setProperty('--font-sans', t.fontFamily);
                    }
                }
            } catch (e) {}
        })();
    </script>
    <script type="importmap">
    {
        "imports": {
            "three": "https://cdn.jsdelivr.net/npm/three@0.177.0/build/three.module.js",
            "three/addons/": "https://cdn.jsdelivr.net/npm/three@0.177.0/examples/jsm/"
        }
    }
    </script>
    {% block head %}{% endblock %}
</head>
<body class="flex flex-col min-h-screen">
    {% include "header.html" %}
    <main class="container" style="flex-grow: 1; padding-top: var(--space-xl); padding-bottom: var(--space-xl);">
        {{ content | safe }}
    </main>
    {% include "footer.html" %}
    <script defer src="https://static.cloudflareinsights.com/beacon.min.js" data-cf-beacon='{"token": "7e9d8b03c4e27e92268d848a78589ca0"}'></script>
    <script src="/assets/js/header.js"></script>
    {% block scripts %}{% endblock %}
</body>
</html>
